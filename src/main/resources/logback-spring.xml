<configuration>

    <!-- 通用的日志文件路径配置 -->
    <springProperty name="LOG_PATH" source="logging.file.path"/>

    <!-- 正常日志输出到文件，使用滚动策略 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/info/application.log</file> <!-- 日志文件路径 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/info/application-%d{yyyy-MM-dd}.%i.log</fileNamePattern> <!-- 文件名模式 -->
            <!-- 文件保留最大天数 -->
            <maxHistory>15</maxHistory>
            <!-- 文件大小限制 -->
            <maxFileSize>10MB</maxFileSize>
            <!-- 文件总大小 -->
            <totalSizeCap>1000MB</totalSizeCap>
        </rollingPolicy>
        <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
        <!-- 日志过滤器，将INFO相关日志过滤出来 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>


    <!-- 异常日志输出到另一个文件，使用滚动策略 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error/error.log</file> <!-- 异常日志文件路径 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/error/error-%d{yyyy-MM-dd}.%i.log</fileNamePattern> <!-- 文件名模式 -->
            <!-- 文件保留最大天数 -->
            <maxHistory>15</maxHistory>
            <!-- 文件大小限制 -->
            <maxFileSize>10MB</maxFileSize>
            <!-- 文件总大小 -->
            <totalSizeCap>1000MB</totalSizeCap>
        </rollingPolicy>
        <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
        <!-- 日志过滤器，将ERROR相关日志过滤出来 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 开发环境控制台输出配置 -->
    <springProfile name="dev,local">
        <!-- 根日志级别配置 -->
        <root level="INFO">
            <appender-ref ref="FILE" />
            <appender-ref ref="STDOUT" /> <!-- 添加控制台输出 -->
        </root>

        <!-- 记录ERROR级别的日志到 ERROR_FILE -->
        <logger name="com.code.cetboot.error" level="ERROR">
            <appender-ref ref="ERROR_FILE" />
        </logger>
    </springProfile>

    <!-- 线上环境控制台不输出配置 -->
    <springProfile name="release">
        <!-- 根日志级别配置 -->
        <root level="INFO">
            <appender-ref ref="FILE" />
        </root>

        <!-- 记录ERROR级别的日志到 ERROR_FILE -->
        <logger name="com.code.cetboot.error" level="ERROR">
            <appender-ref ref="ERROR_FILE" />
        </logger>
    </springProfile>



</configuration>
