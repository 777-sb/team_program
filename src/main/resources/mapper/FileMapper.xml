<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.code.cetboot.mapper.FileMapper">

    <resultMap id="BaseResultMap" type="com.code.cetboot.entity.File">
            <id property="fileId" column="file_id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="src" column="src" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        file_id,name,src
    </sql>

    <select id="selectFileByKeyword" resultType="com.code.cetboot.entity.File">
        SELECT *
        FROM file f
        <where>
            <if test="keyword != null and keyword != ''">
                AND f.name LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
    </select>
</mapper>
